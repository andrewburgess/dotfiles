#!/bin/bash

{{ if and (eq .chezmoi.os "linux") (contains "ubuntu" .oslike) -}}

{{ range .packages.linux.apt }}
sudo apt-get install -y {{ . }}
{{ end -}}

{{ end -}}

# Install Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# Install Homebrew packages
{{ range .packages.linux.brew }}
brew install {{ . }}
{{ end -}}

# Install nvm
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/{{ (gitHubLatestRelease "nvm-sh/nvm").TagName }}/install.sh | bash

# Install oh-my-zsh
RUNZSH=no sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" --keep-zshrc

# Setup aws-vault
AWS_ACCESS_KEY_ID=$(op item get "Amazon AWS" --fields "access key" --reveal)
AWS_SECRET_ACCESS_KEY=$(op item get "Amazon AWS" --fields "access secret" --reveal)
aws-vault add andrewb --env
